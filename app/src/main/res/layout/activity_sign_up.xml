<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.bi.MainActivity"
    android:background="#ff9245">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/signup_bg"
        android:src="@drawable/signup_bg"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:hint="Name"

        android:ems="10"
        android:id="@+id/editText"
        android:editable="true"
        android:enabled="true"
        android:textCursorDrawable="@drawable/cursor_color"
        android:background="@drawable/box"
        android:paddingLeft="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:focusable="true"
        android:textColor="#fffcf8" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:id="@+id/editTextUN"
        android:hint="Username"
        android:background="@drawable/box"
        android:layout_below="@+id/editText"
        android:inputType="text"
        android:textCursorDrawable="@drawable/cursor_color"
        android:paddingLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/editText"
        android:layout_centerVertical="true"
        android:textColor="#fffcf8" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:background="@drawable/box"
        android:id="@+id/editTextEmail"
        android:textCursorDrawable="@drawable/cursor_color"
        android:layout_marginTop="12dp"
        android:paddingLeft="8dp"
        android:layout_below="@+id/editTextUN"
        android:layout_alignLeft="@+id/editTextUN"
        android:layout_alignStart="@+id/editTextUN"
        android:textColor="#fffcf8" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/editTextPW"
        android:background="@drawable/box"
        android:layout_marginTop="12dp"
        android:paddingLeft="8dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignLeft="@+id/editTextEmail"
        android:layout_alignStart="@+id/editTextEmail"
        android:textColor="#fffcf8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup"
        android:id="@+id/signup"
        android:clickable="true"
        android:width = "127dp"
        android:height = "44dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:layout_below="@+id/editTextPW"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:focusable="true" />
</RelativeLayout>